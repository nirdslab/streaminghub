{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "title": "Gaze Plot",
  "description": "Gaze Plot with Scan Paths, Fixations and Heatmaps",
  "width": 480,
  "height": 240,
  "signals": [
    {
      "name": "seek",
      "value": 1,
      "bind": {"input": "range", "min": 0, "max": 1, "step": 0.01}
    },
    {
      "name": "down",
      "value": null,
      "on": [{"events": "mousedown", "update": "xy()"}]
    },
    {
      "name": "xcur",
      "value": null,
      "on": [{"events": "mousedown", "update": "slice(xdom)"}]
    },
    {
      "name": "ycur",
      "value": null,
      "on": [{"events": "mousedown", "update": "slice(ydom)"}]
    },
    {
      "name": "zoombox",
      "value": null,
      "on": [{"events": "window:mouseup", "update": "box || zoombox"}]
    },
    {
      "name": "box",
      "value": null,
      "on": [
        {
          "events": [
            {
              "source": "window",
              "type": "mousemove",
              "consume": true,
              "between": [
                {"type": "mousedown", "filter": "event.shiftKey"},
                {"source": "window", "type": "mouseup"}
              ]
            }
          ],
          "update": "down ? [x(), y()] : null"
        },
        {"events": "window:mouseup", "update": "null"}
      ]
    },
    {
      "name": "delta",
      "value": [0, 0],
      "on": [
        {
          "events": [
            {
              "source": "window",
              "type": "mousemove",
              "filter": "!event.shiftKey",
              "consume": true,
              "between": [
                {"type": "mousedown", "filter": "!event.shiftKey"},
                {"source": "window", "type": "mouseup"}
              ]
            }
          ],
          "update": "down ? [down[0]-x(), y()-down[1]] : [0,0]"
        }
      ]
    },
    {
      "name": "anchor",
      "value": [0, 0],
      "on": [
        {
          "events": "wheel",
          "update": "[invert('xscale', x()), invert('yscale', y())]"
        }
      ]
    },
    {
      "name": "zoom",
      "value": 1,
      "on": [
        {
          "events": "wheel!",
          "force": true,
          "update": "pow(1.001, event.deltaY * pow(16, event.deltaMode))"
        }
      ]
    },
    {
      "name": "xdom",
      "update": "[0,1]",
      "on": [
        {"events": "dblclick", "update": "[0,1]"},
        {
          "events": {"signal": "delta"},
          "update": "[xcur[0] + span(xcur) * delta[0] / width, xcur[1] + span(xcur) * delta[0] / width]"
        },
        {
          "events": {"signal": "zoom"},
          "update": "[anchor[0] + (xdom[0] - anchor[0]) * zoom, anchor[0] + (xdom[1] - anchor[0]) * zoom]"
        },
        {
          "events": {"signal": "zoombox"},
          "update": "[invert('xscale', min(down[0], zoombox[0])), invert('xscale', max(down[0], zoombox[0]))]"
        }
      ]
    },
    {
      "name": "ydom",
      "update": "[0,1]",
      "on": [
        {"events": "dblclick", "update": "[0,1]"},
        {
          "events": {"signal": "delta"},
          "update": "[ycur[0] + span(ycur) * delta[1] / height, ycur[1] + span(ycur) * delta[1] / height]"
        },
        {
          "events": {"signal": "zoom"},
          "update": "[anchor[1] + (ydom[0] - anchor[1]) * zoom, anchor[1] + (ydom[1] - anchor[1]) * zoom]"
        },
        {
          "events": {"signal": "zoombox"},
          "update": "[invert('yscale', max(down[1], zoombox[1])), invert('yscale', min(down[1], zoombox[1]))]"
        }
      ]
    },
    {"name": "size", "update": "clamp(10/span(xdom), 10, 50)"}
  ],
  "data": [
    {
      "name": "points",
      "values": [],
      "transform": [
        {"type": "extent", "field": "x", "signal": "xext"},
        {"type": "extent", "field": "y", "signal": "yext"}
      ]
    },
    {
      "name": "subset",
      "source": "points",
      "transform": [{"type": "filter", "expr": "(indexof(data('points'),datum)/length(data('points'))) < seek"}]
    },
    {
      "name": "density",
      "source": "subset",
      "transform": [
        {
          "type": "kde2d",
          "size": [{"signal": "width"}, {"signal": "height"}],
          "bandwidth": [10,10],
          "x": {"expr": "scale('xscale', datum.x)"},
          "y": {"expr": "scale('yscale', datum.y)"},
          "as": "grid",
          "counts": false
        },
        {
          "type": "heatmap",
          "field": "grid",
          "color": {"expr": "scale('color', datum.$value/datum.$max)"},
          "opacity": 0.4
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "zero": false,
      "domain": {"signal": "xdom"},
      "range": "width"
    },
    {
      "name": "yscale",
      "zero": false,
      "domain": {"signal": "ydom"},
      "range": "height"
    },
    {
      "name": "color",
      "zero": false,
      "domain": [0, 1],
      "range": {"scheme": "plasma"}
    }
  ],
  "axes": [
    {"scale": "xscale", "orient": "bottom"},
    {"scale": "yscale", "orient": "left"}
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {"data": "subset"},
      "clip": true,
      "encode": {
        "enter": {
          "fillOpacity": {"value": 0.6},
          "fill": {"value": "steelblue"}
        },
        "update": {
          "x": {"scale": "xscale", "field": "x"},
          "y": {"scale": "yscale", "field": "y"},
          "size": {"signal": "size"}
        }
      }
    },
    {
      "type": "line",
      "from": {"data": "subset"},
      "clip": true,
      "encode": {
        "enter": {"strokeWidth": {"value": 1}, "opacity": {"value": 0.3}},
        "update": {
          "x": {"scale": "xscale", "field": "x"},
          "y": {"scale": "yscale", "field": "y"}
        }
      }
    },
    {
      "type": "image",
      "from": {"data": "density"},
      "clip": true,
      "encode": {
        "update": {
          "x": {"value": 0},
          "y": {"value": 0},
          "image": {"field": "image"},
          "width": {"signal": "width"},
          "height": {"signal": "height"},
          "aspect": {"value": false},
          "smooth": {"value": true}
        }
      }
    }
  ]
}