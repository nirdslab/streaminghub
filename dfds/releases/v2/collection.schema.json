{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "collection.schema.json",
  "description": "schema of a data collection",
  "type": "object",
  "required": [
    "$schema",
    "identifier",
    "name",
    "description",
    "keywords",
    "authors",
    "sources",
    "fields",
    "groups",
    "resolver"
  ],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "identifier": {
      "$ref": "./dfds.schema.json#/definitions/identifier"
    },
    "name": {
      "description": "name of the collection",
      "type": "string"
    },
    "description": {
      "description": "description of the collection",
      "type": "string"
    },
    "keywords": {
      "description": "keywords that best describes the collection",
      "type": "array",
      "minItems": 1,
      "items": {
        "description": "a keyword",
        "type": "string"
      }
    },
    "authors": {
      "description": "authors of the dataset",
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "./dfds.schema.json#/definitions/author"
      }
    },
    "sources": {
      "description": "data sources for the dataset",
      "$ref": "./dfds.schema.json#/definitions/refs"
    },
    "fields": {
      "$ref": "./dfds.schema.json#/definitions/fields"
    },
    "groups": {
      "description": "information about how data can be grouped",
      "type": "object",
      "minProperties": 1,
      "patternProperties": {
        ".*": {
          "description": "information about a grouping",
          "type": "object",
          "required": [
            "description",
            "attributes"
          ],
          "properties": {
            "description": {
              "type": "string"
            },
            "attributes": {
              "type": "array",
              "minItems": 1,
              "items": {
                "$ref": "./dfds.schema.json#/definitions/fields"
              }
            }
          }
        }
      }
    },
    "resolver": {
      "description": "script to resolve data",
      "$ref": "./dfds.schema.json#/definitions/ref"
    }
  }
}