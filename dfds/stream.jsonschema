{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "stream.schema.json",
  "description": "schema of a data stream",
  "type": "object",
  "required": [
    "$schema",
    "identifier",
    "format",
    "traceback"
  ],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "identifier": {
      "$ref": "./dfds.schema.json#/definitions/identifier"
    },
    "format": {
      "description": "format of the stream",
      "type": "object",
      "required": [
        "name",
        "description",
        "unit",
        "frequency",
        "fields",
        "index"
      ],
      "additionalProperties": false,
      "properties": {
        "name": {
          "description": "name of the data stream",
          "type": "string"
        },
        "description": {
          "description": "description of the data stream",
          "type": "string"
        },
        "unit": {
          "description": "unit of measurement",
          "type": "string"
        },
        "frequency": {
          "description": "sampling frequency (Hz)",
          "type": "integer",
          "minimum": 0
        },
        "fields": {
          "$ref": "./dfds.schema.json#/definitions/fields"
        },
        "index": {
          "$ref": "./dfds.schema.json#/definitions/ref"
        }
      }
    },
    "traceback": {
      "description": "traceback to the origin of the stream",
      "type": "array",
      "minItems": 1,
      "items": {
        "anyOf": [
          {
            "description": "a source",
            "$ref": "./source.schema.json",
            "minItems": 1
          },
          {
            "description": "a transformation",
            "$ref": "./transform.schema.json"
          },
          {
            "description": "a stream",
            "$ref": "#"
          }
        ]
      }
    }
  }
}