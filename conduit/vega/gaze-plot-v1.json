{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "Gaze Plot with Scan Paths, Fixations and Heatmaps",
  "title": "Gaze Plot",
  "width": 480,
  "height": 240,
  "padding": 5,
  "signals": [
    {
      "name": "lx",
      "init": "null",
      "on": [{"events": "mousemove", "update": "invert('sx', x())"}]
    },
    {
      "name": "ly",
      "init": "null",
      "on": [{"events": "mousemove", "update": "invert('sy', y())"}]
    }
  ],
  "scales": [
    {"name": "sx", "domain": [0, 1], "range": "width"},
    {"name": "sy", "domain": [0, 1], "range": "height"},
    {
      "name": "color",
      "type": "linear",
      "domain": [0, 1],
      "range": {"scheme": "plasma"},
      "zero": true
    }
  ],
  "projections": [],
  "axes": [
    {"scale": "sx", "orient": "bottom"},
    {"scale": "sy", "orient": "left"}
  ],
  "legends": [],
  "marks": [
    {
      "type": "symbol",
      "from": {"data": "points"},
      "encode": {
        "enter": {"opacity": {"value": 0.5}},
        "update": {
          "size": {"value": 10},
          "x": {"field": "x", "scale": "sx"},
          "y": {"field": "y", "scale": "sy"}
        }
      }
    },
    {
      "type": "line",
      "from": {"data": "points"},
      "encode": {
        "enter": {"strokeWidth": {"value": 1}, "opacity": {"value": 0.3}},
        "update": {
          "x": {"field": "x", "scale": "sx"},
          "y": {"field": "y", "scale": "sy"}
        }
      }
    },
    {
      "type": "image",
      "from": {"data": "density"},
      "encode": {
        "update": {
          "x": {"value": 0},
          "y": {"value": 0},
          "image": {"field": "image"},
          "width": {"signal": "width"},
          "height": {"signal": "height"},
          "aspect": {"value": false},
          "smooth": {"value": true}
        }
      }
    },
    {
      "type": "rule",
      "encode": {
        "update": {
          "x": {"signal": "lx", "scale": "sx"},
          "x2": {"signal": "lx", "scale": "sx"},
          "y": {"value": 0},
          "y2": {"signal": "height"}
        }
      }
    },
    {
      "type": "rule",
      "encode": {
        "update": {
          "y": {"signal": "ly", "scale": "sy"},
          "y2": {"signal": "ly", "scale": "sy"},
          "x": {"value": 0},
          "x2": {"signal": "width"}
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "update": {
          "x": {"signal": "lx", "scale": "sx", "offset": 3},
          "y": {"signal": "height", "offset": -3},
          "text": {"signal": "lx"}
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "update": {
          "y": {"signal": "ly", "scale": "sy", "offset": 10},
          "x": {"value": 3},
          "text": {"signal": "ly"}
        }
      }
    }
  ],
  "data": [
    {"name": "points", "values": []},
    {
      "name": "density",
      "source": "points",
      "transform": [
        {
          "type": "kde2d",
          "size": [{"signal": "width"}, {"signal": "height"}],
          "x": {"expr": "scale('sx', datum.x)"},
          "y": {"expr": "scale('sy', datum.y)"},
          "as": "grid",
          "counts": false
        },
        {
          "type": "heatmap",
          "field": "grid",
          "color": {"expr": "scale('color', datum.$value/datum.$max)"},
          "opacity": 0.4
        }
      ]
    }
  ]
}